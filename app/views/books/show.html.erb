<% if logged_in? %>
  <div class="container-fluid">
    <aside class="visible-xs">
      <%= render 'shared/book_form' %>
    </aside>
    <div class="row">
      <aside class="hidden-xs col-sm-3 col-md-3 col-lg-3" style="float: left;">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="book_form">
            <%= render 'shared/book_form' %>
          </section>
      </aside>

      <div class="col-xs-16 col-sm-8 col-md-8 col-lg-8">
        <div class="row">
          <div class="col-xs-5 col-md-6">
            <h1>All Books</h1>
          </div>
          <div class="pull-right col-xs-5 col-md-6">
            <%= render 'shared/search' %>
          </div>
        </div>
        <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
<% else %>
<div class="col-xs-16 col-sm-8 col-md-8 col-lg-8">
  <div class="row">
    <div class="col-xs-5 col-md-6">
      <h1>All Books</h1>
    </div>
    <div class="pull-right col-xs-5 col-md-6">
      <%= render 'shared/search' %>
    </div>
  </div>
  <%= render 'shared/feed' %>
</div>
<% end %>
