<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="book_form">
        <%= render 'shared/book_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= form_tag books_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
      <% end %>
      <h3>All Books</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8">

      <h3>All Books</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>
