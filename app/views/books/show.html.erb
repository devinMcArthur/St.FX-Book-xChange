<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="book_form">
        <%= render 'shared/book_form' %>
      </section>
    </aside>
    <div class="col-md-10">
      <%= render 'shared/search' %>
    </div>
    <div class="col-md-8">
      <h1>All Books</h1>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8">
      <h1>All Books</h1>
      <%= render 'shared/search' %>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>
