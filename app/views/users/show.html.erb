<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="book_form">
      <% if logged_in? %>
        <%= render 'shared/book_form' %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.demands.any? %>
      <h3>Demands (<%= @user.demands.count %>)</h3>
      <ol class="books">
        <%= render @demands %>
        <% if @demands.matches.any? %>
          <ol class="books">
            <%= @demands.match.title %>
          </ol>
          <%= will_paginate @demands.matches %>
        <% end %>
      </ol>
      <%= will_paginate @demands %>
    <% end %>
    <% if @user.books.any? %>
      <h3>Books (<%= @user.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>

  </div>
</div>
