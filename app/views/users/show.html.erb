<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="book_form">
      <% if logged_in? %>
        <%= render 'shared/book_form' %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @demand_items.any? %>
      <h3>Demands (<%= @demand_items.count %>)</h3>
      <ol class="books">
        <%= render @demand_items %>
        <% @user.demands.each? %>
          <ol class="books">
            <%= @demand_items.matches.param[:title] %>
          </ol>
          <%= will_paginate @demand_items.matches %>
        <% end %>
      </ol>
      <%= will_paginate @demand_items %>
    <% end %>
    <-- Books Render ->
    <% if @user.books.any? %>
      <h3>Books (<%= @user.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>

  </div>
</div>
