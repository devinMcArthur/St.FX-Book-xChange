<% provide(:title, "Demands") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>Demands</h1>
    </section>
    <section class="book_form">
      <% if logged_in? %>
        <%= render 'shared/demand_form' %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- Demand Loop -->
    <% if @demands.any? %>
      <h1>Demands (<%= @demands.count %>)</h1>
      <% @demands.each do |t| %>
        <h3><%= t.title %></h3>
        <%= link_to "delete", t, method: :delete, data: { confirm: "You sure?" } %>
        <!-- Match Loop -->
        <% t.matches.each do |match| %>
          <% book = Book.find(match.book_id) %>
          <h2><%= book.title %></h2><%= match.weight %> - <%= match.streak %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
